<% include ./partials/formHeader.ejs %>
	<div class = "col-10 col-md-6 col-lg-4 offset-1 offset-md-3 offset-lg-4 py-4 border border-danger bg-white rounded text-center">
		<div class = "mb-4">
			<h3>Log in to Dine 5-2-1</h3>
			<% if (message.length > 0) { %>
				<div class = "alert alert-danger"><%=message%></div>
			<% } %>
		</div>
		<div>
			<form action="/login" method="POST">
				<div class = "form-group">
					<input type="email" name="email" placeholder="youremail@domain.com">
				</div>
				<div class = "form-group">
					<input type="password" name="password" placeholder="your password">
				</div>
				<button type="submit" class = "btn btn-primary">Log in</button>
			</form>
			<a href = "/signup" class = "btn btn-secondary mt-3">New User?</a>
		</div>
	</div>
