<% include ./partials/formHeader.ejs %>	
	<div class = "col-10 col-md-6 col-lg-4 offset-1 offset-md-3 offset-lg-4 py-4 border border-danger bg-white rounded text-center">
		<div class = "mb-4">
			<h3>Sign up for Dine 5-2-1</h3>
			<% if (message.length > 0) { %>
				<div class = "alert alert-danger"><%=message%></div>
			<% } %>
		</div>
		<div>
			<form action="/signup" method="POST">
				<div class = "form-group">
					<input type="email" name="email" placeholder="email@domain.com" required>
				</div>
				<div class = "form-group">
					<input type="password" name="password" placeholder="password" required>
				</div>
				<div class = "form-group">
					<input type="email" name="partner" placeholder="partner's email" required>
				</div>
				<button type="submit" class = "btn btn-lg btn-primary">Sign Up</button>
			</form>
		</div>
	</div>
<% include ./partials/footer.ejs %>