<% include ./partials/formHeader.ejs %>
	<div class = "col-10 col-md-6  offset-1 offset-md-3 py-4 border border-danger bg-white rounded text-center">
		<div class = "mb-4">
			<h3>Choose Search Parameters</h3>
		</div>
		<form action="/newSession" method="POST">
			<input type="text" name="address" placeholder="Full Address, City, or Zip Code" class = "col-12 col-lg-10 offset-lg-1 mb-3" required>
			<div class = "form-group d-flex  col-12 col-md-8 offset-md-2 justify-content-start">
				<div class = "form-check form-check-inline">
					<input class = "form-check-input" type = "checkbox" id = "OneDollar" name = "OneDollar" value = "1">
					<label class = "form-check-label" for = "OneDollar">$</label>
				</div>
				<div class = "form-check form-check-inline">
					<input class = "form-check-input" type = "checkbox" id = "TwoDollar" name = "TwoDollar" value = "2">
					<label class = "form-check-label" for = "TwoDollar">$$</label>
				</div>
				<div class = "form-check form-check-inline">
					<input class = "form-check-input" type = "checkbox" id = "ThreeDollar" name = "ThreeDollar" value = "3">
					<label class = "form-check-label" for = "ThreeDollar">$$$</label>
				</div>
				<div class = "form-check form-check-inline">
					<input class = "form-check-input" type = "checkbox" id = "FourDollar" name = "FourDollar" value = "4">
					<label class = "form-check-label" for = "OneDollar">$$$$</label>
				</div>
			</div>
			<div class = "form-group col-12 col-lg-10 offset-lg-1 d-flex justify-content-start">
				<div class = "form-check form-check-inline mx-3">
					<input class = "form-check-input" type = "radio" name ="whoStarts" id = "userStarts" value = "user" checked>
					<label class = "form-check-label" for = "userStarts">I'll Start</label>
				</div>
				<div class = "form-check form-check-inline">
					<input class = "form-check-input" type = "radio" name ="whoStarts" id = "partnerStarts" value = "partner">
					<label class = "form-check-label" for = "partnerStarts">My Partner Starts</label>
				</div>
			</div>
			<button type="submit" class = "btn btn-lg btn-primary">Search</button>
		</form>
	</div>
<% include ./partials/footer.ejs %>